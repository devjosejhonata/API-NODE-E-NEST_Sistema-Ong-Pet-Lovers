{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",                             // Recomendado para Node 18+ com bom suporte sem precisar ES2023
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,                        // Compatibilidade com m√≥dulos ES
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",                             // Define claramente a pasta de origem
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,                                 // Habilita todos os modos estritos de TypeScript
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "dist", "test"]
}
